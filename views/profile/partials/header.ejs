<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>UBlog</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <!-- Custom fonts for this template -->
    <script src="/js/fontawesome.js"></script>

    <!-- Custom styles for this template -->
    <script src="/js/jquery.min.js"></script>

    <link rel="icon" href="/img/browserTab.png">


    <!-- Custom styles for this template -->
    <link href="/css/main.css" rel="stylesheet">
    <link href="/css/navbar.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="/"><img class="img-responsive" src="/img/logo.png" style="width: 100px;height: 25px;"></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/create-blog">Create Blog</a>
                    </li>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><img
                                    src="/<%= user.img %>" alt="Alternate Text"
                                    class="img-responsive rounded-circle" style="width: 30px;height: 30px;" />
                                <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="navbar-content">
                                        <div class="row">
                                            <div class="col-md-5">
                                                <img src="/<%= user.img %>" alt="Alternate Text"
                                                    class="img-responsive rounded-circle"
                                                    style="width: 120px;height: 120px;" />
                                            </div>
                                            <div class="col-md-7">
                                                <span><%= user.firstName %> <%= user.lastName %></span>
                                                <p class="text-muted small">
                                                    <%= user.email %></p>
                                                <div class="divider">
                                                </div>
                                                <a href="/users/<%= user.id %>"
                                                    class="btn btn-primary btn-sm active">View Profile</a>
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="navbar-footer">
                                        <div class="navbar-footer-content">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <a href="/users/<%= user.id %>/update-profile-photo" class="btn btn-default btn-sm">Change Photo</a>
                                                </div>
                                                <div class="col-md-6">
                                                    <a href="/logout"
                                                        class="btn btn-default btn-sm pull-right">Logout</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </ul>
            </div>
        </div>
    </nav>

    

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/<%= foundUser.userBackgroundImg %>')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h2><%= foundUser.firstName %></h2>
                        <span class="subheading"><%= foundUser.lastName %></span>
                    </div>
                </div>
            </div>

        </div>

    </header>
    <div style="text-align: center; margin-top: -9em; position: relative;">
        <img id="userImg" class="rounded-circle" src="/<%= foundUser.userImg%>" style="width: 250px;height: 250px;">
    </div>

    <script>
        document.getElementById("userImg").style.border = "solid white";
    </script>


    <% if(localStorage.getItem("userId")==foundUser._id) { %>
    <%- include ("./forOwner") %>
    <% } else { %>
    <%- include ("./forGuest") %>
    <% } %>